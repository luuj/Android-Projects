<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="${packageName}.${activityClass}" >

    <ImageView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/mainImage"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/bluegrass_situation" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticketString"
            android:id="@+id/textView"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketCountSpinner"
            android:entries="@array/array_ticket_amounts"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tString"
        android:id="@+id/totalCost"
        android:layout_gravity="right"
        android:textSize="16dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pString"
            android:id="@+id/proceedButton"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
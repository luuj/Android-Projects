<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_weight=".50"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:id="@+id/americanIV"
            android:src="@drawable/american"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/americanString"
            android:id="@+id/americanText"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:id="@+id/indianIV"
            android:src="@drawable/indian"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indianString"
            android:id="@+id/indianText"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:id="@+id/middleeastIV"
            android:src="@drawable/middle_east"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/middleeastString"
            android:id="@+id/middleeastText"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_weight=".50"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:id="@+id/chineseIV"
            android:src="@drawable/chinese"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chineseString"
            android:id="@+id/chineseText"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:id="@+id/italianIV"
            android:src="@drawable/italian"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/italianString"
            android:id="@+id/italianText"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:id="@+id/portugueseIV"
            android:src="@drawable/portuguese"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portugueseString"
            android:id="@+id/portugueseText"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drinkTypeString"
                android:id="@+id/textView9"
                android:gravity="right"
                android:textSize="16dp"
                android:layout_marginLeft="120dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noneString"
                android:id="@+id/drinkSummary"
                android:layout_weight="0.7"
                android:gravity="right"
                android:layout_marginRight="16dp"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sweetString"
                android:id="@+id/textView8"
                android:layout_marginLeft="120dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sweetSummary"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:text="@string/noneString" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brewString"
                android:id="@+id/textView11"
                android:layout_marginLeft="120dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noneString"
                android:id="@+id/brewSummary"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sizeString"
                android:id="@+id/textView13"
                android:layout_marginLeft="120dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sizeSummary"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icedString"
                android:id="@+id/textView15"
                android:layout_marginLeft="120dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icedSummary"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/milkString"
                android:id="@+id/textView17"
                android:layout_marginLeft="120dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/milkSummary"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="196dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmString"
                android:id="@+id/confirmButton"
                android:layout_weight="1"
                android:layout_marginRight="4dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelString"
                android:id="@+id/cancelButton"
                android:layout_weight="1"
                android:layout_marginLeft="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
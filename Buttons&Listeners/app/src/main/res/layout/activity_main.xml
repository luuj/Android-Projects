<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_text"
        android:id="@+id/askText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_android"
        android:id="@+id/btnAndroid"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/askText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ios"
        android:id="@+id/btniOS"
        android:layout_marginEnd="45dp"
        android:layout_alignTop="@+id/btnAndroid"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
